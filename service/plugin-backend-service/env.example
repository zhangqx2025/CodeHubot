# ==========================================
# 插件后端服务环境变量配置
# ==========================================

# ==================== 服务配置 ====================
# 端口 9002（9001 被 MQTT WebSocket 占用）
SERVICE_PORT=9002
SERVICE_HOST=0.0.0.0

# ==================== 数据库配置 ====================
# 数据库主机
DB_HOST=localhost

# 数据库端口
DB_PORT=3306

# 数据库名称
DB_NAME=aiot

# 数据库用户
DB_USER=aiot_user

# 数据库密码
DB_PASSWORD=your_password

# ==================== MQTT配置 ====================
# MQTT服务器地址
MQTT_BROKER=localhost

# MQTT端口
MQTT_PORT=1883

# MQTT用户名（可选，留空表示匿名访问）
MQTT_USERNAME=

# MQTT密码（可选，留空表示匿名访问）
MQTT_PASSWORD=

